<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/joinclass"
    tools:context=".AddClassroomActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLASSIC"
            android:textSize="21sp"
            android:textColor="#FAFDFDFA" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="323dp"
        android:layout_height="180dp"
        android:layout_marginTop="180dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/linearbackground">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Classroom Code"
            android:layout_marginTop="35dp"
            android:background="@drawable/edittext"
            android:paddingLeft="15dp"
            android:textColorHint="#0C0901"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:id="@+id/mycode_class"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkCode"
            android:background="@drawable/buttonback"
            android:text="Join"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"/>

    </LinearLayout>



</LinearLayout>