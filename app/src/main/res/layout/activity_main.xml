<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginpage"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLASSIC"
            android:textSize="21sp"
            android:textColor="#FAFDFDFA" />

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="323dp"
        android:layout_height="395dp"
        android:orientation="vertical"
        android:id="@+id/loginLayout"
        android:layout_marginTop="284dp"
        android:layout_gravity="center_horizontal"
        android:padding="30dp"
        android:background="@drawable/linearbackground"
        android:visibility="visible">

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Email Address"
            android:background="@drawable/edittext"
            android:textColorHint="#0C0901"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:background="@drawable/edittext"
            android:textColorHint="#0C0901"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:layout_marginTop="24dp"
            android:hint="Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/login"
            android:onClick="login"
            android:layout_width="wrap_content"
            android:background="@drawable/buttonback"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textColor="#0C0901"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonback"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:onClick="signupPage"
            android:text="Signup" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="323dp"
        android:layout_height="395dp"
        android:orientation="vertical"
        android:layout_marginTop="284dp"
        android:layout_marginLeft="44dp"
        android:padding="30dp"
        android:background="@drawable/linearbackground"
        android:id="@+id/signupLayout"
        android:visibility="invisible">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="EmailAddress"
            android:inputType="textEmailAddress"
            android:layout_marginTop="12dp"
            android:background="@drawable/edittext"
            android:textColorHint="#0C0901"
            android:id="@+id/signupEmail"
            android:paddingLeft="13dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext"
            android:textColorHint="#0C0901"
            android:hint="Name"
            android:paddingLeft="13dp"
            android:id="@+id/signupName" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teacher/Student"
            android:background="@drawable/edittext"
            android:textColorHint="#0C0901"
            android:id="@+id/signupProf"
            android:layout_marginTop="15dp"
            android:paddingLeft="13dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signupPassword"
            android:hint="Create Password"
            android:background="@drawable/edittext"
            android:textColorHint="#0C0901"
            android:paddingLeft="13dp"
            android:inputType="textPassword"
            android:layout_marginTop="15dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signup"
            android:background="@drawable/buttonback"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="34dp"
            android:onClick="signup"/>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>